NAME = 42

all : $(NAME)

$(NAME) : $(OBJ)
		@echo ----------------------------------------
		@echo ---------  42 FORTY-TWO INSIDE ---------
		@echo ----------------------------------------
		make -C lib
		make -C src
		@echo ----------------------------------------
		@echo ---------  42 FORTY-TWO INSIDE ---------
		@echo ----------------------------------------
		@echo ---------- Choose your side ------------
		@echo ----------------------------------------
		@echo ----------------- RUN ------------------
		@echo ----------------------------------------

install: all

clean :
			make clean -C lib
			make clean -C src

fclean : clean
			make fclean -C lib
			make fclean -C src

re : fclean all
